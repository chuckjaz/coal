{
    "version": "1.5.0",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noLib": false,
        "outDir": "dist",
        "declarationDir": "typings",
        "sourceMap": true
    },
    "exclude": [
        "typings",
        "node_modules"
    ]
}
